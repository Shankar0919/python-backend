{
  "name": "python-backend",
  "targets": {
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "flake8 src"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pytest"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "python src/app.py"
      }
    },
    "generate-apispec": {
      "executor": "nx:run-commands",
      "options": {
        "command": "python scripts/generate_apispec.py"
      }
    }
  }
}
